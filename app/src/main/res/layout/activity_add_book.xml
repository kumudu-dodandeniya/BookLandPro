<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashbord"
    tools:context=".Add_Book">



    <ImageView
        android:id="@+id/book_image"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/adventure"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>


    <EditText
        android:id="@+id/Book_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_image"
        android:padding="20dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="45dp"
        android:inputType="textMultiLine"
        android:hint="Book Name"
        android:background="@drawable/button2"
        android:textStyle="bold"
        android:textColorHint="@color/black"
        />

    <EditText
        android:id="@+id/Book_Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Book_Name"
        android:padding="20dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="45dp"
        android:inputType="textMultiLine"
        android:hint="Book Description"
        android:background="@drawable/button2"
        android:textStyle="bold"
        android:textColorHint="@color/black"
        />

    <EditText
        android:id="@+id/Book_Price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Book_Description"
        android:padding="20dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="45dp"
        android:inputType="textMultiLine"
        android:hint="Book Price"
        android:textStyle="bold"
        android:textColorHint="@color/black"
        android:background="@drawable/button2"

        />

    <Button
        android:id="@+id/btn_add_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Book_Price"
        android:padding="17dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
       android:textAllCaps="false"
        android:layout_marginRight="45dp"
        android:text="Add Book"
        android:textColor="@android:color/white"/>


</RelativeLayout>