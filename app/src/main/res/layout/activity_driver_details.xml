<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/2btns"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_15"
    tools:context=".driverDetails">

    <Button
        android:id="@+id/btnadd"
        android:layout_width="252dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:text="Add Details"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.383"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name5" />

    <TextView
        android:id="@+id/txt_option5"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="&#8942;"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="463dp" />

    <TextView
        android:id="@+id/txt_option4"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="&#8942;"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="391dp" />

    <TextView
        android:id="@+id/txt_option3"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="&#8942;"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="319dp" />

    <TextView
        android:id="@+id/txt_option2"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="&#8942;"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="247dp" />

    <TextView
        android:id="@+id/deliveryinfo"
        android:layout_width="409dp"
        android:layout_height="67dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="40dp"
        android:gravity="center_horizontal"
        android:text="Driver Details"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/name1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name1"
        android:layout_width="313dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:text="A.B. Ruwan"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/name2"
        app:layout_constraintEnd_toStartOf="@+id/txt_option"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_option"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="&#8942;"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="175dp" />

    <TextView
        android:id="@+id/name2"
        android:layout_width="313dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:text="C.D.Kamal"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/name3"
        app:layout_constraintEnd_toStartOf="@+id/txt_option2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/name3"
        android:layout_width="313dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:text="K. Nuwan"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/name4"
        app:layout_constraintEnd_toStartOf="@+id/txt_option3"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/name4"
        android:layout_width="313dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:text="L.Saman"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/name5"
        app:layout_constraintEnd_toStartOf="@+id/txt_option4"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/name5"
        android:layout_width="313dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="P.Nimal"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/txt_option5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="463dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/grpbtn"
        android:layout_width="102dp"
        android:layout_height="50dp"
        android:layout_marginStart="260dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deliveryinfo">

        <TextView
            android:id="@+id/edit"
            android:layout_width="102dp"
            android:layout_height="25dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Edit"
            android:textAlignment="center"
            android:textColor="@color/black"
           android:background="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/remove"
            android:layout_width="102dp"
            android:layout_height="25dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Remove"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="@color/white"
            android:textSize="16sp" />
    </com.google.android.material.chip.ChipGroup>

</androidx.constraintlayout.widget.ConstraintLayout>