<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dashbord"
        android:orientation="vertical"
        tools:context=".CardDetails">





        <EditText
            android:id="@+id/update_cardnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="60dp"
            android:ems="10"
            android:hint="@string/cardnumber"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="#F80000"
            android:textColorHint="#5C000000" />

        <EditText
            android:id="@+id/update_nameoncard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="@string/nameoncard"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="#070707"
            android:textColorHint="#5C000000" />

        <EditText
            android:id="@+id/update_expire_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="@string/mandy"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColorHint="#5C000000" />

        <EditText
            android:id="@+id/update_cvv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="@string/cvv"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColorHint="#5C000000" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:hint="Update and Confirm"
            android:textColor="#FFFFFF"
            android:textColorHint="#FAF8F8"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:backgroundTint="#D3EA0F0F" />


    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:hint="Delete"
        android:textColor="#FFFFFF"
        android:textColorHint="#FAF8F8"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:backgroundTint="#D3EA0F0F" />

    </LinearLayout>


